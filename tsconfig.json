{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
